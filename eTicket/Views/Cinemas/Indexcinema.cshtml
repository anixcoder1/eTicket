@model IEnumerable<Cinema>

@{ViewData["Title"] = "List of Cinema";
}


<div class="row">

    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle"><img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width:150px"></td>
                        <td class="align-middle">@Html.DisplayFor(ModelIem => item.Name) </td>
                        <td class="align-middle">@Html.DisplayFor(ModelIem => item.Description)</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a> |
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>

                }
            </tbody>

        </table>
    </div>
</div>